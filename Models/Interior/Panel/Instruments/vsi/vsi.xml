<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>vsi.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>bezel</object-name>
    <object-name>edge</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Curtiss-Model-F/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <!-- <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop> -->
      <red>   0.25 </red>
      <green> 0.15 </green>
      <blue>  0.15 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
      <entry><ind> -2000 </ind><dep> -173.0 </dep></entry>
      <entry><ind> -1500 </ind><dep> -126.0 </dep></entry>
      <entry><ind> -1000 </ind><dep>  -84.0 </dep></entry>
      <entry><ind>  -500 </ind><dep>  -41.5 </dep></entry>
      <entry><ind>     0 </ind><dep>    0.0 </dep></entry>
      <entry><ind>   500 </ind><dep>   41.5 </dep></entry>
      <entry><ind>  1000 </ind><dep>   84.0 </dep></entry>
      <entry><ind>  1500 </ind><dep>  126.0 </dep></entry>
      <entry><ind>  2000 </ind><dep>  173.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
