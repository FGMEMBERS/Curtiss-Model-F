<?xml version="1.0" encoding="ISO-8859-1"?>
 
<PropertyList>

  <fx>
 
    <crank>
      <name>crank</name>
      <path>Aircraft/Curtiss-Model-F/Sounds/starter.wav</path>
      <mode>looped</mode>
      <condition>
        <property>/engines/engine/cranking</property>
        <not>
          <property>/engines/engine/running</property>
        </not>
      </condition>
      <volume> 
        <property>/orientation/alpha-deg</property>
        <type>log</type>
        <min>0.5</min>
        <max>1.0</max>
      </volume>
      <volume> 
        <factor>1.2</factor>
        <max>1.0</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>
    
    <engine>
      <name>ralenti</name>
      <path>Aircraft/Curtiss-Model-F/Sounds/ralenti.wav</path>
      <mode>looped</mode>
      <condition>
        <property>/engines/engine/running</property>
        <less-than>
          <property>/engines/engine/rpm</property>
          <value>300</value>
        </less-than>
      </condition>
      <volume>
        <property>/engines/engine/mp-osi</property>
        <factor>0.005</factor>
        <min>0.15</min>
        <max>0.5</max>
        <offset>0.15</offset>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.0015</factor>
        <min>.3</min>
        <max>5.0</max>
        <offset>0.3</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>
    
    <engine>
      <name>engine</name>
      <path>Aircraft/Curtiss-Model-F/Sounds/running.wav</path>
      <mode>looped</mode>
      <condition>
        <property>/engines/engine/running</property>
        <greater-than>
          <property>/engines/engine/rpm</property>
          <value>300</value>
        </greater-than>
      </condition>
      <volume>
        <property>/engines/engine/mp-osi</property>
        <factor>0.005</factor>
        <min>0.15</min>
        <max>0.5</max>
        <offset>0.15</offset>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.0015</factor>
        <min>.3</min>
        <max>5.0</max>
        <offset>0.3</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>
    
    <ocean-outside>
      <name>water2</name>
      <mode>looped</mode>
      <path>Aircraft/Curtiss-Model-F/Sounds/wave.wav</path>   
      <condition>
        <or> 
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
          <property>/gear/gear[3]/wow</property>
          <property>/gear/gear[4]/wow</property>
        </or>
      </condition>
      <volume>
        <property>position/gear-agl-m</property>
        <factor>-0.0009</factor>
        <offset>0.235</offset>
        <min>0.01</min>
        <max>0.235</max>
      </volume>
    </ocean-outside>
    
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <property>velocities/airspeed-kt</property>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.003</factor>
        <min>0.03</min>
        <max>1.2</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.003</factor>
        <offset>1.25</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </wind>

    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Sounds/stall.wav</path>
      <condition>
        <and>
          <property>/sim/alarms/stall-warning</property>
          <greater-than>
            <property>/velocities/airspeed-kt</property>
            <value>10</value>
          </greater-than>
          <not>
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>/sim/alarms/stall-warning</property>
        <max>1.0</max>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>20.0</max-dist>
    </stall>

  </fx>

</PropertyList>
